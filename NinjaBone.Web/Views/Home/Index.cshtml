@using NinjaBone.Models
@model IEnumerable<Ninja>

@{
    ViewBag.Title = "Meet the ninjas";
    List<Ninja> ninjas = Model.ToList();
}
<div data-role="page" id="page">
    <div data-role="header">
        <h1>Ninja book</h1>
    </div><!-- /header -->
 
    <div data-role="content">
        <ul data-role="listview">
            @foreach (Ninja ninja in ninjas)
            {
                <li><a href="#ninja-@ninja.Id">@ninja.Name</a></li>
            }
        </ul>
    </div><!-- /content -->
</div>

@foreach (Ninja ninja in ninjas)
{
    <div data-role="page" id="ninja-@ninja.Id">
        <div data-role="header">
            <h1>@ninja.Name</h1>
        </div><!-- /header -->
        
        <ul data-role="listview">
            <li class="twitter">@ninja.Twitter</li>    
            <li class="skype">@ninja.Skype</li>    
            <li class="facebook">@ninja.Facebook</li>    
        </ul>
        <fieldset class="ui-grid-a">
            <div class="ui-block-a"><a href="mailto:@ninja.Email" data-role="button">Send Mail</a></div>
            <div class="ui-block-b"><a href="tel:@ninja.Phone" data-role="button">Call</a></div>	   
        </fieldset>

    </div>
    <!-- /page -->
}